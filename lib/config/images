[%

# Images used by this site. Please override and complete.

site.image = {
  logo = {
      src    = "$site.url.images/eb.jpg"
      alt    = "EekBoek Boekhouden"
      width  = 149
      height = 87
  }
  name = {
      src    = "$site.url.images/ebname.jpg"
      alt    = "EekBoek"
      width  = 151
      height = 22
  }
  credits = {
      src    = "$site.url.images/perl_powered.png"
      alt    = "Powered by Perl"
      width  = 134
      height = 48
      url    = "http://www.perl.org/"
  }
  tt2credits = {
      src    = "$site.url.images/tt2power.png"
      alt    = "Powered by Template Toolkit"
      width  = 78
      height = 47
      url    = "http://www.tt2.org/"
  }
  background = {
      src    = "$site.url.images/bg.gif"
  }
}

# Postprocessing images used by this site. Please DO NOT override.

# Set the background.
site.background = site.image.background;

# Calculate width for the left column.
IF site.image.logo.width < site.image.name.width;
    site.logowidth = site.image.name.width;
ELSE;
    site.logowidth = site.image.logo.width;
END;

-%]
